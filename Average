#include <iostream>
#include "bits/stdc++.h"
using namespace std;
double sum (int n) {
    double sum ;
    for (int i = 0 ; i < n ; i++) {
        double a ;
        cin >> a ;
        sum += a ;
    }
    return sum ;
}
int main() {
int n ;
cin >> n ;
cout << setprecision(8) << sum(n)/n << endl;
}
