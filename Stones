#include <iostream>
#include <algorithm>

using namespace std;

const int MAXN = 100005;

long long v[MAXN];         
long long u[MAXN];         
long long prefix_v[MAXN];  
long long prefix_u[MAXN];  

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int n;
    cin >> n;

    
    for (int i = 1; i <= n; ++i) {
        cin >> v[i];
        prefix_v[i] = prefix_v[i - 1] + v[i];
        u[i] = v[i]; // copy for sorting
    }

    // Sort u and build prefix_u
    sort(u + 1, u + n + 1); // sort from index 1 to n
    for (int i = 1; i <= n; ++i) {
        prefix_u[i] = prefix_u[i - 1] + u[i];
    }

    int m;
    cin >> m;

    for (int i = 0; i < m; ++i) {
        int type, l, r;
        cin >> type >> l >> r;

        if (type == 1) {
            // Sum from v[l] to v[r]
            cout << prefix_v[r] - prefix_v[l - 1] << "\n";
        } else {
            // Sum from u[l] to u[r]
            cout << prefix_u[r] - prefix_u[l - 1] << "\n";
        }
    }

    return 0;
}
