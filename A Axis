#include <iostream>
#include <vector>
#include <algorithm>
#include <cmath>
using namespace std;

int main() {
    int t;
    cin >> t;
    while (t--) {
        vector<int> x(3);
        cin >> x[0] >> x[1] >> x[2];
        sort(x.begin(), x.end());
        int a = x[1]; // median
        int result = abs(a - x[0]) + abs(a - x[1]) + abs(a - x[2]);
        cout << result << '\n';
    }
    return 0;
}
