#include <iostream>
#include <unordered_map>
#include <vector>
using namespace std;

int main() {

    int t;
    cin >> t;

    while (t--) {
        int n;
        cin >> n;

        vector<int> arr(n);
        for (int i = 0; i < n; ++i)
            cin >> arr[i];

        unordered_map<int, long long> freq;
        long long ans = 0;

        for (int i = 0; i < n; ++i) {
            int key = arr[i] - i;
            freq[key]++;
        }

        for (auto& [key, count] : freq) {
            ans += (count * (count - 1)) / 2;
        }

        cout << ans << endl;
    }

    return 0;
}
