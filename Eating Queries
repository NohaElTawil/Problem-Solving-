#include <iostream>
#include <vector>
#include <algorithm>

using namespace std;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;

    while (t--) {
        int n, q;
        cin >> n >> q;

        vector<int> arr(n);
        for (int i = 0; i < n; i++) {
            cin >> arr[i];
        }


        sort(arr.rbegin(), arr.rend());


        vector<long long> prefix(n);
        prefix[0] = arr[0];
        for (int i = 1; i < n; i++) {
            prefix[i] = prefix[i - 1] + arr[i];
        }


        while (q--) {
            long long x;
            cin >> x;


            int low = 0, high = n - 1, ans = -1;
            while (low <= high) {
                int mid = (low + high) / 2;
                if (prefix[mid] >= x) {
                    ans = mid;
                    high = mid - 1;
                } else {
                    low = mid + 1;
                }
            }

            if (ans == -1) {
                cout << -1 << endl;
            } else {
                cout << ans + 1 << endl;
            }
        }
    }

    return 0;
}
